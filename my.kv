WindowManager:
    AttendenceWindow:
    DatasetWindow:
<Button>:
    font_size:15
    color:1,0.6,0.7,1
    background_color: 0.3,0.4,0.5,1

<Label>:
    font_size:15
    color:0.23,0.62,0.62,1
    pos_hint:{"x":0}
    background_color: 0.3,0.4,0.5,1
    valign : "middle"
    halign : "center"

<TextInput>:
    font_size:15
    color:1,0.6,0.7,1
    pos_hint:{"x":0.5}

<AttendenceWindow>:
    name: "main"
    FloatLayout:

        Button:
            text:"Attendance"
            on_release: app.root.current = "main"
            pos_hint:{"x":0,"top":1}
            size_hint: 0.20,0.10
        Button:
            text:"Train Faces"
            pos_hint:{"x":0.20,"top":1}
            size_hint: 0.20,0.10
            on_press : 
                app.startTrain()
        Button:
            text:"Load Face"
            on_release: 
                app.root.current = "second"
                root.manager.transition.direction = "left"
            pos_hint:{"x":0.40,"top":1}
            size_hint: 0.20,0.10
        Button:
            text:"Show Users"
            on_release: 
                app.UserList()
            pos_hint:{"x":0.60,"top":1}
            size_hint: 0.20,0.10
        Button:
            text:"Show Attendance"
            on_release: 
                app.AttendanceList()
            pos_hint:{"x":0.80,"top":1}
            size_hint: 0.20,0.10
        Image:
            id: vid
            size_hint: 1, 0.6
            allow_stretch: True 
            keep_ratio: True
            pos_hint: {'x':0, 'top':0.87}
        Label:
            text:"Enter User ID: "
            pos_hint:{"x":0,"top":0.25}
            size_hint: 0.25,0.05

        TextInput:
            id:user_id
            multiline:False
            pos_hint:{"x":0.29,"top":0.25}
            size_hint: 0.7,0.05
            
        Button:
            text : "Recognize Face"
            pos_hint:{"x":0.025,"top":0.15}
            size_hint: 0.45,0.10
            on_press : app.startAttendence()
        Button:
            text : "Mark Attendance"
            pos_hint:{"x":0.525,"top":0.15}
            size_hint: 0.45,0.10
            on_press : app.break_loop()
        Label:
            id:info
            text: ""
            pos_hint:{"x":0.025,"top":0.05}
            size_hint: 0.95,0.05

<DatasetWindow>:
    name: "second"
    FloatLayout:

        Button:
            text:"Attendance"
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"
            pos_hint:{"x":0,"top":1}
            size_hint: 0.20,0.10
        Button:
            text:"Train Faces"
            pos_hint:{"x":0.20,"top":1}
            size_hint: 0.20,0.10
            on_press : app.startTrain()
        Button:
            text:"Load Face"
            on_release: app.root.current = "second"
            pos_hint:{"x":0.40,"top":1}
            size_hint: 0.20,0.10
        Button:
            text:"Show Users"
            on_release: 
                app.UserList()
            pos_hint:{"x":0.60,"top":1}
            size_hint: 0.20,0.10
        Button:
            text:"Show Attendance"
            on_release: 
                app.AttendanceList()
            pos_hint:{"x":0.80,"top":1}
            size_hint: 0.20,0.10
        Label:
            text:"Enter User Name: "
            pos_hint:{"x":0,"top":0.765}
            size_hint: 0.25,0.05

        TextInput:
            id:user_name
            multiline:False
            pos_hint:{"x":0.29,"top":0.765}
            size_hint: 0.7,0.05
            
        Label:
            text:"Enter User ID: "
            pos_hint:{"x":0,"top":0.665}
            size_hint: 0.25,0.05

        TextInput:
            id:user_id
            multiline:False
            pos_hint:{"x":0.29,"top":0.665}
            size_hint: 0.7,0.05
            
        Label:
            text:"Amount of snaps(200 recomended):  "
            size_hint: 0.95,0.05
            pos_hint:{"x":0.025,"top":0.60}

        TextInput:
            id:snap
            multiline:False
            size_hint: 0.95,0.05
            pos_hint:{"x":0.025,"top":0.55}
            
        Button:
            text : "Load Face"
            pos_hint:{"x":0.025,"top":0.3}
            size_hint: 0.95,0.10
            on_press : app.startDataset()
        Label:
            id:info
            text: ""
            pos_hint:{"x":0.025,"top":0.1}
            size_hint: 0.95,0.05